/* pages/index/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f6f6f6;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.update-info {
  display: flex;
  align-items: center; /* 改为 center，避免基线对齐导致的奇怪视觉 */
  gap: 8rpx;
}

.update-label {
  font-size: 24rpx;
  color: #999;
}

.update-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.filter-tabs {
  display: flex;
  gap: 12rpx;
}

.filter-tab {
  padding: 12rpx 28rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s cubic-bezier(0, 0, 0.2, 1);
}

.filter-tab.active {
  color: #fff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
  transform: translateY(-2rpx);
}

/* 表格容器 - 左右分离布局 */
.table-container {
  flex: 1;
  display: flex;
  overflow: hidden;
}

/* 左侧固定列 */
.fixed-left {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  border-right: 2rpx solid #e8e8e8;
  background: #fff;
}

.fixed-left .table-header {
  height: 60rpx;
  line-height: 60rpx;
  background: #fafafa;
  border-bottom: 1rpx solid #e8e8e8;
}

.fixed-body {
  flex: 1;
  height: calc(100vh - 210rpx);
}

/* 右侧可滚动列 */
.scroll-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.scroll-right .table-header {
  height: 60rpx;
  background: #fafafa;
  border-bottom: 1rpx solid #e8e8e8;
  overflow-x: auto;
  overflow-y: hidden;
}

.header-content {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  white-space: nowrap;
}

.header-content > view {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.scroll-body {
  flex: 1;
  height: calc(100vh - 210rpx);
  background: #fff;
}

/* 数据行 */
.table-row {
  display: flex;
  align-items: center; /* 确保所有子元素垂直居中 */
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 100rpx;
  background: #fff;
}

.table-row.row-alt {
  background: #fafafa;
}

/* 加载和错误状态 */
.loading-box,
.error-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text,
.error-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.retry-btn {
  margin-top: 30rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  color: #1890ff;
  background: #e6f7ff;
  border-radius: 8rpx;
}

/* 列样式定义 */
.col-name {
  width: 200rpx;
  min-width: 200rpx;
  padding: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center; /* 纵向居中 */
  align-items: center; /* 水平居中 */
  min-height: 100rpx; /* 最小高度 */
}

.fund-name {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  text-align: center; /* 文字居中 */
}

