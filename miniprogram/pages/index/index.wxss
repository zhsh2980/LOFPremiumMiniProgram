/* 状态标签 */
.status-tag {
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  border-radius: 4rpx;
}

.tag-limited {
  color: #52c41a; /* 绿色 */
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
}

.tag-suspended {
  color: #8c8c8c; /* 灰色 */
  background: #f5f5f5;
  border: 1rpx solid #d9d9d9;
}

/* 颜色工具类 */
