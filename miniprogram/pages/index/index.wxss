/* pages/index/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f6f6f6;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  padding: 16rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.filter-tab {
  padding: 12rpx 32rpx;
  margin-right: 16rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 8rpx;
  transition: all 0.2s;
}

.filter-tab.active {
  color: #fff;
  background: #1890ff;
}

/* 加载状态 */
.loading-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #ddd;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.error-text {
  font-size: 28rpx;
  color: #999;
}

.retry-btn {
  margin-top: 30rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  color: #1890ff;
  background: #e6f7ff;
  border-radius: 8rpx;
}

/* 表格容器 */
.table-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 表头 */
.table-header {
  display: flex;
  background: #fafafa;
  border-bottom: 1rpx solid #e8e8e8;
  font-size: 24rpx;
  color: #999;
}

.header-cell {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
}

.scroll-header {
  flex: 1;
  white-space: nowrap;
}

/* 表格主体 */
.table-body {
  flex: 1;
  background: #fff;
}

/* 数据行 */
.table-row {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.table-row.row-alt {
  background: #fafafa;
}

/* 固定列 */
.col-fixed {
  width: 200rpx;
  min-width: 200rpx;
  padding: 16rpx 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: inherit;
  box-shadow: 4rpx 0 8rpx rgba(0, 0, 0, 0.04);
  z-index: 1;
}

.fund-name {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.fund-code {
  font-size: 22rpx;
  color: #1890ff;
  margin-top: 4rpx;
}

/* 滚动列容器 */
.scroll-cols {
  flex: 1;
  white-space: nowrap;
}

.scroll-row {
  display: inline-flex;
  min-width: 100%;
}

/* 各列样式 */
.col-premium {
  width: 140rpx;
  min-width: 140rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.col-status {
  width: 120rpx;
  min-width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.col-price {
  width: 120rpx;
  min-width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 16rpx;
  font-size: 26rpx;
  color: #666;
}

.col-change {
  width: 120rpx;
  min-width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 16rpx;
  font-size: 26rpx;
}

/* 状态标签 */
.status-tag {
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  border-radius: 4rpx;
}

.tag-limited {
  color: #fa8c16;
  background: #fff7e6;
}

.tag-suspended {
  color: #f5222d;
  background: #fff1f0;
}

/* 涨跌颜色 */
.text-red {
  color: #f5222d;
}

.text-green {
  color: #52c41a;
}

/* 更新时间 */
.update-time {
  padding: 16rpx;
  text-align: center;
  font-size: 22rpx;
  color: #999;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
}
